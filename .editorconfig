# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*.{java,xml,yaml,yml,js,ts,json,css,less,html,properties,toml,env}]]
end_of_line = lf
insert_final_newline = true
indent_style = space
charset = utf-8
trim_trailing_whitespace = true


[*.{java,xml}]
indent_size = 4

[*.{yml, yaml,js,ts,json,css,less,html,properties,toml,env}]
indent_size = 2

[Jenkinsfile]
indent_size = 4